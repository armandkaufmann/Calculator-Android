<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#FFEACC" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#FF9500" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#FF9500" />
    <!--Default Background Color -->
    <item android:color="#FFEACC" />
</selector>